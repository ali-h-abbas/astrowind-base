---
import '@fontsource/cormorant-garamond/400.css';
import '@fontsource/cormorant-garamond/600.css';
import '@fontsource/cormorant-garamond/700.css';
import '@fontsource-variable/inter';
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Cormorant Garamond';
    --aw-font-heading: 'Cormorant Garamond';

    --aw-color-primary: rgb(107 93 74);
    --aw-color-secondary: rgb(91 116 94);
    --aw-color-accent: rgb(139 111 78);

    --aw-color-text-heading: rgb(44 38 30);
    --aw-color-text-default: rgb(60 54 45);
    --aw-color-text-muted: rgb(107 93 74);
    --aw-color-bg-page: rgb(250 248 243);

    --aw-color-bg-page-dark: rgb(30 28 24);

    ::selection {
      background-color: rgb(219 206 186);
      color: rgb(44 38 30);
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Cormorant Garamond';
    --aw-font-heading: 'Cormorant Garamond';

    --aw-color-primary: rgb(181 157 123);
    --aw-color-secondary: rgb(140 163 143);
    --aw-color-accent: rgb(191 159 118);

    --aw-color-text-heading: rgb(250 248 243);
    --aw-color-text-default: rgb(230 224 214);
    --aw-color-text-muted: rgb(181 157 123);
    --aw-color-bg-page: rgb(30 28 24);

    ::selection {
      background-color: rgb(107 93 74);
      color: rgb(250 248 243);
    }
  }
</style>
